{
	"extends": "./.svelte-kit/tsconfig.json", // this is generated from svelte.config.js
	"compilerOptions": {
		"outDir": "", // idk it makes it work
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	},
	"include": ["./src/**/*.js", "./src/**/*.ts", "./src/**/*.svelte"],
	"exclude": ["./.svelte-kit/**", "./node_modules/**"]
}
